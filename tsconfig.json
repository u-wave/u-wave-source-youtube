{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "es2020",
    "target": "es2020",
    "declaration": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts"
  ]
}
